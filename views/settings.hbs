{{> menu_member id='settings' }}

<div class="ui two column grid basic middle aligned segment">
  <div class="column">
    <img class="ui image" src="images/gymlogo.jpg">
  </div>
  <div class="column">
    <form class="ui stacked segment form" action="/update" method="POST">
      <h3 class="ui header">Settings</h3>
      <div class="two fields">
        <div class="field">
          <label>Name</label>
          <input placeholder="{{member.name}}" type="text" name="name">
        </div>
        <div class="field">
          <label>Gender</label>
          <select name="gender" class="ui dropdown">
            <option value="{{member.gender}}">Male</option>
          </select>
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input placeholder="{{member.email}}" type="email" name="email" disabled>
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password">
      </div>
      <div class="field">
        <label>Address</label>
        <input placeholder="{{member.address}}" type="text" name="address">
      </div>
      <div class="two fields">
        <div class="field">
          <label>Height</label>
          <input placeholder="{{member.height}} cm" type="number" step="0.01" min="0" max="300"
                 name="height">
        </div>
        <div class="field">
          <label>Starting Weight</label>
          <input placeholder="{{member.startWeight}} kg" type="number" step="0.01" min="0" max="300"
                 name="startWeight">
        </div>
      </div>
      <button class="ui blue submit button">Submit</button>
    </form>
  </div>
</div>
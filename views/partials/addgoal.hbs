<form class="ui stacked segment form" action="/dashboard/addgoal" method="POST">
  <div class="three fields">

    <div class="required field">
      <label>Goal</label>
      <select name="goal_type" class="ui fluid search dropdown" required>
        <option value="">Goal</option>
        <option value="weight">Weight</option>
        <option value="chest">Chest</option>
        <option value="thigh">Thigh</option>
        <option value="thigh">Waist</option>
        <option value="thigh">Hips</option>
      </select>
    </div>
    <div class="required field">
      <label>Goal Target</label>
      <input placeholder="00.00" type="number" step="0.01" min="0" max="300" name="goal_target"
             required>
    </div>
    <div class="required field">
      <label>Goal Date</label>
      <input type="date" name="goal_date" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Goal</button>
</form>
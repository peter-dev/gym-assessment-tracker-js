<form class="ui stacked segment form" action="/dashboard/member/{{member.id}}/addgoal"
      method="POST">
  <div class="three fields">

    <div class="required field">
      <label>Goal</label>
      <select name="type" class="ui fluid search dropdown" required>
        <option value="">Goal</option>
        <option value="Weight">Weight</option>
        <option value="Chest">Chest</option>
        <option value="Thigh">Thigh</option>
        <option value="Waist">Waist</option>
        <option value="Hips">Hips</option>
      </select>
    </div>
    <div class="required field">
      <label>Goal Target</label>
      <input placeholder="00.00" type="number" step="0.01" min="0" max="300" name="target"
             required>
    </div>
    <div class="required field">
      <label>Goal Date</label>
      <input type="date" name="target_date" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Goal</button>
</form>